<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Category</th>
      <th>Cod eligible</th>
      <th>Release datetime</th>
      <th>Image </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.name, product %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td><%= product.category.name %></td>
        <td><%= product.cod_eligible %></td>
        <td><%= product.release_datetime %></td>
        <td><img src="<%= product.avatar.url(:medium)%>"></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center><%= paginate @products %></center>

<%= link_to 'New Product', new_product_path %>
