<p id="notice"><%= notice %></p>

<%= javascript_include_tag "products.js", "data-turbolinks-track" => true  %>
<%= form_tag(products_path, method: :get, class: "form-inline", role: "search") do %>
  <div class="input-group">
    <%= text_field_tag :term, 
      params[:term],
      id: 'product_search',
      autocomplete: :off,
      placeholder: "Search", 
      class: "form-control typeahead" %>
    <div class="input-group-btn search-panel">
      <%= submit_tag "search", class: "btn btn-default"%>
      <%= link_to "Clear", root_url, class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Category</th>
      <th>Cod eligible</th>
      <th>Release datetime</th>
      <th>Image </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.name, product %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td><%= product.category.name %></td>
        <td><%= product.cod_eligible %></td>
        <td><%= product.release_datetime %></td>
        <td><img src="<%= product.avatar.url(:medium)%>"></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center><%= paginate @products %></center>

<%= link_to 'New Product', new_product_path %>
